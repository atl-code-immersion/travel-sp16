<style>
	body {
		background: <%= @color %>;
	}
</style>

<h1>About Me</h1>
<p>Lots of interesting stuffs.</p>

<p>My favorite color is <%= @color %></p>

<p>My shoe size is <%= @size %></p>
<% if @size > 12 %>
	<p>My feet are <big>HUGE</big></p>
<% end %>

<div class="btn-group">
	<%= link_to "Red", about_path(color: "red", size: 12), class: "btn btn-danger" %>
	<%= link_to "Yellow", about_path(color: "yellow", size: 15), class: "btn btn-warning" %>
	<%= link_to "Green", about_path(color: "green", size: 8), class: "btn btn-success" %>
</div>

<div id="map-canvas"></div>